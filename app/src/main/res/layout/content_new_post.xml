<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/titleOfPost"
        android:layout_width="269dp"
        android:layout_height="36dp"
        android:hint="Title of Post"
        android:textAlignment="center"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />

    <TextView
        android:id="@+id/priceOfPost"
        android:layout_width="269dp"
        android:layout_height="36dp"
        android:hint="Price of Post"
        android:background="#ffffff"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleOfPost"
        app:layout_constraintVertical_bias="0.053" />


    <TextView
        android:id="@+id/imageUpload"
        android:layout_width="269dp"
        android:layout_height="36dp"
        android:hint="Upload Image"
        android:background="#ffffff"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceOfPost"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/descriptionOfPost"
        android:layout_width="270dp"
        android:layout_height="215dp"
        android:background="#ffffff"
        android:hint="Description"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUpload"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="269dp"
        android:layout_height="36dp"
        android:hint="Contact Info"
        android:background="#ffffff"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionOfPost"
        app:layout_constraintVertical_bias="0.137" />

    <Button
        android:id="@+id/submitNewPost"
        android:layout_width="191dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:text="Submit New Post"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>